{
  "private": true,
  "name": "client",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "mkdir -p node_modules/.lsp",
    "bs:build": "bsb -make-world -clean-world",
    "bs:watch": "bsb -make-world -w",
    "bs:clean": "bsb -clean-world",
    "test": "jest",
    "build": "BS_LOG=error bsb -make-world && NODE_ENV=production webpack && cp -r public/* build",
    "deploy": "now build && now alias",
    "staging": "npm run build && now build && now alias staging.rtop.khoanguyen.me",
    "start": "webpack-dev-server",
    "ci:build": "rm -rf build && node ./set-bsconfig-production.js && bsb -clean-world && npm run build",
    "now-build": "npm run ci:build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@frontarm/demoboard": "^0.1.25",
    "@frontarm/demoboard-core": "^0.1.25",
    "@ryb73/decco": "^0.0.14",
    "bs-abstract": "^0.17.0",
    "bs-css": "^9.0.1",
    "bs-decode": "^0.8.1",
    "bs-fetch": "^0.5.0",
    "bs-log": "^0.1.1",
    "bs-webapi": "^0.15.2",
    "codemirror": "^5.39.2",
    "console-feed": "^2.8.10",
    "let-anything": "^1.0.3",
    "polestar": "^0.1.2",
    "re-classnames": "^2.1.0",
    "re-debouncer": "^2.0.0",
    "react": "^16.8.6",
    "react-codemirror2": "^6.0.0",
    "react-dom": "^16.4.1",
    "react-icons": "^3.0.4",
    "react-reflex": "^3.0.16",
    "reason-future": "github:RationalJS/future",
    "reason-react": "github:reasonml/reason-react",
    "reason-react-update": "^0.1.1",
    "relude": "^0.19.0",
    "sketch-stdlib": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@glennsl/bs-jest": "^0.4.3",
    "babel-jest": "^23.4.0",
    "babel-loader": "^8.0.6",
    "bs-platform": "^5.2.1",
    "css-loader": "^1.0.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "faker": "^4.1.0",
    "file-loader": "^2.0.0",
    "gentype": "^2.41.0",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^5.3.0",
    "react-hot-loader": "^4.12.6",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.0.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.10",
    "worker-loader": "^2.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack-stylish": "^0.1.8"
  },
  "jest": {
    "testMatch": [
      "**/*_test.bs.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@glennsl|@thangngoc89|bs-platform)",
      "/public/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{re,rei}": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 version"
  ]
}
